{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {}
  },
  "postCreateCommand": [
    "rustup install component add rustfmt clippy rust-src llvm-tools",
  ],
  "hostRequirements": {
    "gpu": false
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/main.rs"
      ]
    },
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer"
      ]
    }
  }
}
